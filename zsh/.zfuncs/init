init_node() {
  fnm install --lts
}

init_apps() {
  npm install -gf \
    @graphql-inspector/cli \
    aws-azure-login \
    corepack \
    wgc \
    yarn \
    tree-sitter-cli

  cd ~/dotfiles/ && stow -t /Applications Applications
}

init_tpm() {
  rm -rf ~/.config/tmux/plugins/tpm && git clone https://github.com/tmux-plugins/tpm ~/.config/tmux/plugins/tpm
}

init_opam() {
  rm -rf ~/.opam
  opam init
  opam update
}

init_tpm && init_node && init_apps && init_opam

