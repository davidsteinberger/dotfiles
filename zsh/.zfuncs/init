init_apps() {
  npm install -g \
    @bitwarden/cli \
    @graphql-inspector/cli \
    aws-azure-login \
    corepack \
    wgc \
    yarn

  cd ~/dotfiles/ && stow -t /Applications Applications
}

init_tpm() {
  rm -rf ~/.tmux && git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm
}

init_opam() {
  rm -rf ~/.opam
  opam init
  opam update
}

init_tpm && init_apps && init_opam

